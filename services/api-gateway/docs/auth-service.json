{
  "openapi": "3.1.0",
  "info": {
    "title": "OpenApi specification - RestBank",
    "description": "OpenApi documentation for RestBank",
    "termsOfService": "Terms of service",
    "contact": {
      "name": "Kryshtal Maxim",
      "url": "https://github.com/22crystyle",
